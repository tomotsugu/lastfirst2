<input type="button" value="プロフィール一覧" onClick="location.href='users'">
<input type="button" value="投稿一覧" onClick="location.href='posts'">
<input type="button" value="問合せ一覧" onClick="location.href='contacts'">
<input type="button" value="お知らせ一覧" onClick="location.href='informations_admin'">

<p id="notice"><%= notice %></p>

<h1>お知らせ一覧</h1>

<%= link_to '新規作成', new_information_path, class: 'square_btn' %>

<!-- レスポンシブ対応のために div を追加 -->
<div class="table-responsive">
  <!-- テーブルにクラスを追加 -->
  <table class="table table-striped">
  <thead>
    <tr>
      <th>作成日</th>
      <th>お知らせ</th>
      <th>通知先</th>
      <th>公開・非公開</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @informations.each do |information| %>
      <tr>
        <td>
          <%= information.created_at.strftime('%Y/%m/%d %H:%M') %>
        </td>
        <td><%= information.title %></td>
        <td>
          <% if information.destination == '1' %>各保健所
          <% else %>VISITOR
          <% end %>
        </td>
        <td>
          <% if information.release == 1 %>公開
          <% else %>非公開
          <% end %>
        </td>
        <td><%= link_to '詳細', information %></td>
        <td><%= link_to '編集', edit_information_path(information) %></td>
        <td><%= link_to '削除', information, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

