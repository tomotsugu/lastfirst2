<input type="button" value="問合せ一覧" onClick="location.href='contacts'">
<input type="button" value="お知らせ一覧" onClick="location.href='/informations'">

<p id="notice"><%= notice %></p>

<h1>informations</h1>

<!-- レスポンシブ対応のために div を追加 -->
<div class="table-responsive">
  <!-- テーブルにクラスを追加 -->
  <table class="table table-striped">
  <thead>
    <tr>
      <th>title</th>
      <th>Content</th>
      <th>Destination</th>
      <th>release</th>
      <th colspan="7"></th>
    </tr>
  </thead>

  <tbody>
    <% @informations.each do |information| %>
      <tr>
        <td><%= information.title %></td>
        <td><%= information.content %></td>
        <td><%= information.destination %></td>
        <td><%= information.release %></td>
        <td><%= link_to 'Show', information %></td>
        <td><%= link_to 'Edit', edit_information_path(information) %></td>
        <td><%= link_to 'Destroy', information, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New information', new_information_path, class: 'btn btn-primary' %>
