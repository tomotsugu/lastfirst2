<%= form_with(model: information, local: true, url: choose_new_or_edit) do |form| %>
  <% if information.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(information.errors.count, "error") %> prohibited this information from being saved:</h2>

      <ul>
      <% information.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>

    </div>
  <% end %>

  <div class="field">
    <%= form.label :お知らせ　（50文字以内） %>
    <%= form.text_field :title, id: :information_title %>
  </div>

  <div class="field">
    <%= form.label :お知らせ詳細　（255文字以内） %>
    <%= form.text_area :content, id: :information_content %>
  </div>

  <div class="field">
    <%= form.label :通知先 %>
    <%= form.text_field :destination, id: :information_destination %>
  </div>
  
  <div class="form-group row">
    <div class="col-sm-10 btn-group" data-toggle="buttons">
      <% if information.release == 1 %>
        <label class="btn btn-outline-secondary" style="width:10%">
          <%= form.radio_button :release, 0, {} %> 非公開
        </label>
      <% else %>
        <label class="btn btn-outline-secondary active" style="width:10%">
          <%= form.radio_button :release, 0, {:checked => true} %> 非公開
        </label>
      <% end %>

      <% if information.release == 1 %>
        <label class="btn btn-outline-secondary active" style="width:10%">
          <%= form.radio_button :release, 1, {:checked => true} %> 公開
        </label>
      <% else %>
        <label class="btn btn-outline-secondary" style="width:10%">
          <%= form.radio_button :release, 1, {} %> 公開
        </label>
      <% end %>
    </div>
  </div>  

　<br>
  <div class="actions">
    <%= form.submit "実　行" %>
  </div>
<% end %>
