<p id="notice"><%= notice %></p>

<h1>運用者画面</h1>
<%= link_to "パスワード変更", edit_user_path(current_user.id), class: 'btn btn-primary' %>
<P class="btn btn-primary">
<input type="button" value="投稿一覧" onClick="location.href='posts'">
</p>
<%= link_to "問合せ一覧", requests_path(current_user.id), class: 'btn btn-primary' %>

<h1>requests</h1>

<!-- レスポンシブ対応のために div を追加 -->
<div class="table-responsive">
  <!-- テーブルにクラスを追加 -->
  <table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.name %></td>
        <td><%= request.email %></td>
        <td><%= request.content %></td>
        <td><%= link_to 'Show', request %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
