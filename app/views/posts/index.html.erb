<p id="notice"><%= notice %></p>

<h1>運用者画面</h1>
<input type="button" value="マイページ" onClick="location.href='users'">
<input type="button" value="投稿一覧" onClick="location.href='posts'">
<input type="button" value="問合せ一覧" onClick="location.href='contacts'">

<% if @informations.size != 0 %>
  <h4><B>お知らせ</B></h4>
  <% @informations.each do |information| %>
    <p><%= information.content %></p>
  <% end %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Content</th>
      <th>Release</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
　　　  <td><%= image_tag post.image, :size =>'320x480' %></td>
        <td><%= post.content %></td>
        <td><%= post.release %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
