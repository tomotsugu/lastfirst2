<p id="notice"><%= notice %></p>

<% if @user.role == '2' %>
  <%= link_to "はじめに読んだ下さい", first_index_path %>
  <%= link_to "パスワード変更", edit_user_path(current_user.id) %>
  <%= link_to "投稿一覧", posts_path %>
  <%= link_to "問合せ一覧", requests_path(current_user.id) %>

  <% if @informations.size != 0 %>
    <h4><B>お知らせ</B></h4>
    <% @informations.each do |information| %>
      <ul class="list_info">
        <li><%= information.content %></li>
      </ul>
    <% end %>
  <% end %>
  <br>
  <br>
  <%= link_to '新しい投稿', new_post_path, class: 'square_btn' %>
<% else %>
  <input type="button" value="プロフィール一覧" onClick="location.href='users'">
  <input type="button" value="投稿一覧" onClick="location.href='posts'">
  <input type="button" value="問合せ一覧" onClick="location.href='contacts'">
  <input type="button" value="お知らせ一覧" onClick="location.href='/informations'">
<% end %>

<table>
    <tr>
      <th>Image</th>
      <th>Content</th>
      <th>Release</th>
      <th colspan="3"></th>
    </tr>
    <% @posts.each do |post| %>
      <tr>
    <div class="media__image">
　　　  <td><%= image_tag post.image, :size =>'500x400' %></td>
    </div>
    <div class="media__summary">
        <td class="media__heading"><%= post.content %></td>
    </div>
        <td><%= post.release %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs'  %></td>
      </tr>
    <% end %>
</table>
