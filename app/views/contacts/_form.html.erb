<%= form_with(model: contact, local: true, url: choose2_new_or_edit) do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "お名前" %>
    <%= form.text_field :name, id: :contact_name %>
  </div>

  <div class="field">
    <%= form.label :email, "メールアドレス" %>
    <%= form.text_field :email, id: :contact_email %>
  </div>

  <div class="field">
    <%= form.label :content, "お問合せ内容"  %>
    <%= form.text_area :content, id: :contact_content %>
  <div class="hint">入力文字数:<span id="char_num" >0</span></div>
  </div>


  <%= form.hidden_field :user_id %>
  <%= form.hidden_field :status %>
  <%= form.submit :class=>"square_btn" %>

<% end %>
