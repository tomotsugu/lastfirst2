<h1>ユーザ登録</h1>

<%= form_with(model: @user, local: true) do |f| %>  
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.label :manager %>
  <%= f.text_field :manager %>

  <%= f.label :prefecture %>
  <%= f.text_field :prefecture %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :municipality %>
  <%= f.text_field :municipality %>

  <%= f.label :phone %>
  <%= f.text_field :phone %>

  <%= f.label :role %>
  <%= f.text_field :role %>
  <br>
  <br>
  <%= f.submit "Create my account" %>
<% end %>
